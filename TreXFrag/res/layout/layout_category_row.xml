<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
<TextView
        android:id="@+id/id_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
		android:layout_alignParentTop="true"
         />
    
    <TextView
        android:id="@+id/name_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="false"
        
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         />

    
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop = "true"
        android:layout_toLeftOf="@+id/expend"
        android:background="@drawable/deletebutton"
        android:textSize="25dp"
        android:layout_margin="3dp"
        android:textColor="#FFFFFF"
        android:text="X"
		
         />
    
    <Button
        android:id="@+id/expend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop = "true"
        android:layout_alignParentRight="true"
        android:background="@drawable/expandbuttonshape"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:textSize="30dp"
        android:text=">"
        android:textColor="#A2CB0F"
         
		
         />

    <TextView
        android:id="@+id/pos_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:visibility="gone"
         />
    
</RelativeLayout>

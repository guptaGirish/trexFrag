<?xml version="1.0" encoding="utf-8"?>


 
    <ScrollView
        android:id="@+id/scrollView1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fragmentbackground"
        
        
         >

           
            
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    
    <TextView
        android:id="@+id/page_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        android:gravity="center"
		style="@style/header"       
        android:text="" />

    <Spinner
        android:id="@+id/choosed_Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/prompt_text"
        android:layout_below="@+id/page_header"
        
        
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"      
		android:spinnerMode="dropdown"
		android:popupBackground="@drawable/buttonshape"
		
		
		
         />

    <Button
        android:id="@+id/add_new_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosed_Category"
        android:layout_alignParentRight="true"
        android:text="@string/add_new_category" 
        style="@style/formbuttontext"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        
        />

    
    <EditText
        android:id="@+id/expense_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_category"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:lines="3"
        android:background="@drawable/editboxshape"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        
        android:hint = "Write Your Expense Here"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    
    <EditText
        android:id="@+id/amount_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expense_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:background="@drawable/editboxshape"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        
        android:hint="Write Expense Amount Here"
        android:inputType="numberDecimal" />

    
    
    
    <Button
        android:id="@+id/expense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        
        android:layout_marginRight="5dp"
        android:layout_below="@+id/amount_expense"
        android:layout_alignParentLeft="true"
        android:text=""
        style="@style/formbuttontext" 
         />
    
    
    
    <Button
        android:id="@+id/expense_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        
        android:layout_below="@+id/amount_expense"
        android:layout_alignParentRight="true"
        android:text=""
        
        style="@style/formbuttontext" 
        />
    
    <Button
        android:id="@+id/commit_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expense_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        style="@style/buttontext"
        
        android:text="@string/commit_expense"
         />
		
       </RelativeLayout>
        
    </ScrollView>


